{% extends 'base.html.twig' %}

{% block title %}Prochain Concours{% endblock %}

{% block body %}
    <!-- Onview Section -->
    <div class="container-fluid no-padding welcome-section2">
        <!-- Container -->
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 content-block" style="margin:auto;float:none">

                    <div class="contact-form">
                        <h3>Contactez-Nous</h3>
                        <p>Nous vous répondrons dans les plus brefs délais</p>
                        {% for message in app.flashes('notice') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.name) }}
                                    {{ form_widget(form.sujet) }}
                                    {{ form_widget(form.mail) }}
                                </div>
                                <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.message, {'attr': {'rows': 4}}) }}
                                    <button id="btn_submit" type="submit">Envoyer</button>
                                </div>
                            </div>
                            <div class="alert-msg" id="alert-msg"></div>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>

        </div><!-- Container /- -->
    </div><!-- Onview Section /- -->
    <div class="padding-50"></div>

{% endblock %}
