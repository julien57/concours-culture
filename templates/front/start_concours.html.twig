{% extends 'base.html.twig' %}

{% block title %}Prochain Concours{% endblock %}

{% block body %}
    <!-- Onview Section -->
    <div class="container-fluid no-padding welcome-section2">
        <!-- Container -->
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 content-block" style="margin:auto;float:none">

                    {{ form_start(form) }}
                        <h2>{{ form_label(form.question) }}</h2>
                        <div style="margin-top:50px;font-size:1.4em;text-align:initial">
                            {% for child in form.question %}
                                <div class="form-check" style="margin-top:20px">
                                    {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(child, '', {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                    <input type="submit" title="Submit" class="download-file btn-concours" value="Question suivante" style="margin-top:50px">
                    {{ form_rest(form) }}
                    {{ form_end(form) }}

                </div>
            </div>

        </div><!-- Container /- -->
    </div><!-- Onview Section /- -->
    <div class="padding-50" style="margin-bottom:50px"></div>

{% endblock %}
