<header id="header" class="header-section container-fluid no-padding">
    <!-- Top Header -->
    <div class="top-header container-fluid no-padding">
        <div class="col-md-7 col-sm-12 col-xs-12 top-content no-padding">
            {% if app.user %}
                <a href="{{ path('front_space_quiz') }}"><i class="fa fa-user"></i><b>Mon espace</b></a>
            {% else %}
                <a href="{{ path('front_security_login') }}"><i class="fa fa-user"></i><b style="font-size:14px">INSCRIPTION / CONNEXION</b></a>
            {% endif %}
            <div class="top-icons">
                <ul>
                    <li><a href="https://www.facebook.com/ConcoursCulturecom-100333878321105/" target="_blank"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                </ul>
                <h5>{% if time_quiz.quizInCurse %}<span>QUIZ EN COURS JUSQU'À </span>{{ time_quiz.quizInCurse.quizInCurse|date('H:i') }}{% elseif time_quiz.nextQuiz %}<span>PROCHAIN CONCOURS : </span>{{ time_quiz.nextQuiz.nextQuiz|format_datetime('full', 'short', locale='fr') }}{% else %}AUCUN CONCOURS PRÉVU PROCHAINEMENT{% endif %}</h5>
            </div>
        </div>
    </div><!-- Top Header /- -->
    <!-- Container -->
    <div class="container">
        <!-- nav -->
        <nav class="navbar navbar-default ow-navigation">
            <div class="navbar-header">
                <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path('home') }}" class="navbar-brand" style="color:#e2b13c;font-size:2.5em"><span style="text-transform:uppercase;font-weight:bold">C</span>oncours<span style="text-transform:uppercase;font-weight:bold">C</span>ulture</a>
            </div>
            <!-- Menu Icon -->
            <div class="menu-icon">
            </div><!-- Menu Icon /- -->
            <div class="navbar-collapse collapse navbar-right" id="navbar">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('home') }}" title="About">Accueil</a></li>
                    <li><a href="{{ path('front_next_concours') }}" title="About">Prochain concours</a></li>
                    {% if app.user %}
                    <li><a href="{{ path('front_security_logout') }}" title="About">Déconnexion</a></li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </nav><!-- nav /- -->
    </div><!-- Container /- -->
