{{ form_start(form) }}
<div class="card-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                <small>{{ form_errors(form.title) }}</small>
            </div>
            <div class="form-group">
                {{ form_row(form.content, {'attr': {'class': 'form-control', 'rows': 10}}) }}
                <small>{{ form_errors(form.content) }}</small>
            </div>
        </div>
    </div>
</div>

<div class="card-footer">
    <div class="float-left">
        <a href="{{ path('back_regles_list') }}" class="btn btn-secondary"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Retour</a>
    </div>
    <div class="float-right">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
</div>
{{ form_end(form) }}
