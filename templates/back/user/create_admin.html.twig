{% extends 'base_back.html.twig' %}

{% block title %}Liste Questions{% endblock %}

{% block style %}
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="{{ asset('back/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css') }}">
    <!-- Toastr -->
    <link rel="stylesheet" href="{{ asset('back/plugins/toastr/toastr.min.css') }}">
{% endblock %}

{% block body %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-4">
                    <h1>Création Admin</h1>
                </div>
                <div class="col-sm-3">
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Création d'un administrateur</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <p><span style="color:red">Attention</span>, vous allez créer un compte administrateur qui aura les mêmes droits que vous.</p>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="form-group col-md-6">
                            <small style="color:red">{{ form_errors(form.name) }}</small>
                            {{ form_widget(form.name, {'attr': {'class': 'form-control m-3'}}) }}
                            <small style="color:red">{{ form_errors(form.email) }}</small>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control m-3'}}) }}
                        </div>
                    </div>
                    <div class="float-right p-5">
                        <button class="btn btn-success" type="submit">Créer l'admin</button>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </section>
    <!-- /.content -->

{% endblock %}
