{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="card-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.question, {'attr': {'class': 'form-control'}}) }}
                <small>{{ form_errors(form.question) }}</small>
            </div>
            <div class="form-group">
                <label class="required">Réponses possibles </label>
                <ul id="email-fields-list"
                    data-prototype="{{ form_widget(form.responses.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.responses|length }}">
                    {% for response in form.responses %}
                        <li>
                            {{ form_label(response.response) }}
                            {{ form_widget(response.response) }}
                            <div class="custom-control custom-checkbox">
                                {{ form_widget(response.isGood) }}
                                {{ form_label(response.isGood) }}
                            </div>
                            <a href="{{ path('back_questions_remove_response', {'id': response.vars.value.id}) }}" class="btn btn-block btn-danger btn-sm col-md-12 mt-3">Supprimer cette question</a>
                        </li>
                    {% endfor %}
                </ul>

                <button type="button"
                        class="add-another-collection-widget btn btn-info"
                        data-list-selector="#email-fields-list">Ajouter une réponse</button>
            </div>
        </div>
    </div>
</div>

<div class="card-footer">
    <button type="submit" class="btn btn-primary">Enregistrer</button>
</div>
{{ form_end(form) }}
