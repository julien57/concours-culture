{% extends 'base_back.html.twig' %}

{% block title %}Liste Questions{% endblock %}

{% block style %}
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="{{ asset('back/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css') }}">
    <!-- Toastr -->
    <link rel="stylesheet" href="{{ asset('back/plugins/toastr/toastr.min.css') }}">
{% endblock %}

{% block body %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-4">
                    <h1>Liste des prix</h1>
                </div>
                <div class="col-sm-3">
                    <a href="{{ path('back_gift_add') }}" class="btn btn-block btn-info" style="color:white;cursor:pointer;">Cr√©er un prix</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Liste des prix</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Illustration</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for gift in gifts %}
                            <tr>
                                <td>{{ gift.id}}</td>
                                <td>{{ gift.name }}</td>
                                <td>{{ gift.description|slice(0, 100) ~ '...' }}</td>
                                <td><img src="{{ asset(constant('App\\Service\\File::PHOTO_GIFT_UPLOAD_DIR') ~ gift.photo) }}" style="width:150px;"></td>
                                <td>
                                    <div class="row">
                                        <a class="btn btn-info btn-sm" href="{{ path('back_gift_edit', {'id': gift.id}) }}">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Editer
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </section>
    <!-- /.content -->

{% endblock %}
