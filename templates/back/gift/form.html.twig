{{ form_start(form) }}
<div class="card-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                <small>{{ form_errors(form.name) }}</small>
            </div>
            <div class="form-group">
                {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': 10}}) }}
                <small>{{ form_errors(form.description) }}</small>
            </div>
            <div class="form-group">
                {{ form_label(form.photo) }}<br>
                {% if gift.photo %}
                    <img src="{{ asset(constant('App\\Service\\File::PHOTO_GIFT_UPLOAD_DIR') ~ gift.photo) }}" style="width:200px">
                {% endif %}
                <p>Modifier la photo :</p>
                {{ form_widget(form.photo) }}
                <small>{{ form_errors(form.photo) }}</small>
            </div>
        </div>
    </div>
</div>

<div class="card-footer">
    <div class="float-left">
        <a href="{{ path('back_gift_list') }}" class="btn btn-secondary"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Retour</a>
    </div>
    <div class="float-right">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
</div>
{{ form_end(form) }}
